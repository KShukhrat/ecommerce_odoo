<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">doctor.form</field>
        <field name="model">z.doctor</field>
        <field name="arch" type="xml">
            <form string="Врач">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="specialty"/>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                        </group>
                        <group>
                            <field name="image" widget="image" width="100" height="160" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">doctor.tree</field>
        <field name="model">z.doctor</field>
        <field name="arch" type="xml">
            <tree string="Врачи">
                <field name="name"/>
                <field name="specialty"/>
            </tree>
        </field>
    </record>

    <record id="action_doctor" model="ir.actions.act_window">
        <field name="name">Врачи</field>
        <field name="res_model">z.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_doctor" id="menu_doctor" parent="menu_sanatorium_root" sequence="30"/>
</odoo>