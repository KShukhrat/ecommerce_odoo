<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_treatment_session_form" model="ir.ui.view">
        <field name="name">treatment.session.form</field>
        <field name="model">z.treatment.session</field>
        <field name="arch" type="xml">
            <form string="Сеанс лечения">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="treatment_id"/>
                        <field name="doctor_id"/>
                    </group>
                    <group>
                        <field name="date"/>
                        <field name="time_start"/>
                        <field name="time_end"/>
                        <field name="status"/>
                    </group>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_start_session" type="object" string="Начать сеанс" class="oe_stat_button" icon="fa-play"/>
                        <button name="action_complete_session" type="object" string="Завершить сеанс" class="oe_stat_button" icon="fa-check"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_treatment_session_tree" model="ir.ui.view">
        <field name="name">treatment.session.tree</field>
        <field name="model">z.treatment.session</field>
        <field name="arch" type="xml">
            <tree string="Сеансы лечения">
                <field name="patient_id"/>
                <field name="treatment_id"/>
                <field name="doctor_id"/>
                <field name="status"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_treatment_session_calendar" model="ir.ui.view">
        <field name="name">treatment.session.calendar</field>
        <field name="model">z.treatment.session</field>
        <field name="arch" type="xml">
            <calendar string="Расписание сеансов" date_start="date_start" date_stop="date_end" color="status" mode="month">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="status"/>
            </calendar>
        </field>
    </record>



    <record id="action_treatment_session" model="ir.actions.act_window">
        <field name="name">Сеансы лечения</field>
        <field name="res_model">z.treatment.session</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>
    <menuitem action="action_treatment_session" id="menu_treatment_session" parent="menu_sanatorium_root" sequence="40"/>
</odoo>